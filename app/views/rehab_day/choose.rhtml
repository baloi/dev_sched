Choose day as the rehab day

<table>
  <tr>
  <% for column in RehabDay.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for rehab_day in @rehab_days %>
  <tr>
  <% for column in RehabDay.content_columns %>
    <td><%=h rehab_day.send(column.name) %></td>
  <% end %>
    <td><%= link_to rehab_day.date, :action => 'set_day', :id => rehab_day %></td>
  </tr>
<% end %>
</table>


